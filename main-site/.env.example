# Donations System (Solo SPHE)
# ============================================
DONATIONS_ENABLED=true
DONATIONS_MIN_AMOUNT_SPHE=1.0

# ============================================
# SMTP Configuration (Email Sending)
# ============================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USERNAME=hi@thesocialmask.org
SMTP_PASSWORD=CHANGE_THIS_PASSWORD_IMMEDIATELY
SMTP_FROM_EMAIL=hi@thesocialmask.org
SMTP_FROM_NAME=TheSocialMask Contact Form
SMTP_ENCRYPTION=ssl
DONATIONS_FEE_PERCENTAGE=2.5
DONATION_CONTRACT_ADDRESS=
