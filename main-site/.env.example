# ============================================
# Pay-Per-View System
# ============================================
PPV_ENABLED=true
PPV_RATE_PER_1000_VIEWS=10.0
PPV_MIN_PAYOUT=100.0
PPV_PAYOUT_SCHEDULE=weekly
PPV_CONTRACT_ADDRESS=
PPV_BONUS_10K_VIEWS=20.0
PPV_BONUS_100K_VIEWS=50.0
PPV_BONUS_1M_VIEWS=100.0

# ============================================
# Journalist System
# ============================================
JOURNALIST_SYSTEM_ENABLED=true
JOURNALIST_MIN_REPUTATION=100
JOURNALIST_PAYOUT_BONUS_PERCENTAGE=50.0
JOURNALIST_ANONYMOUS_ALLOWED=true
JOURNALIST_CONTRACT_ADDRESS=
JOURNALIST_AUTO_APPROVE_THRESHOLD=1000
JOURNALIST_VERIFICATION_REQUIRED=false

# ============================================
# Encryption & Privacy
# ============================================
E2E_ENCRYPTION_ENABLED=true
SIGNAL_PROTOCOL_ENABLED=false
MESSAGE_MAX_SIZE_MB=5
ANONYMOUS_MODE_ENABLED=true
ZKP_ENABLED=false
POLYGON_ID_ENABLED=false
TOR_FRIENDLY=true
MESSAGE_RETENTION_DAYS=0

# ============================================
# Moderation & Legal
# ============================================
AUTO_MODERATION_ENABLED=true
CONTENT_FILTER_LEVEL=minimal
REPORT_THRESHOLD_AUTO_HIDE=10
ILLEGAL_CONTENT_KEYWORDS=child,exploit,terrorism,weapon,drug
RATE_LIMIT_PER_MINUTE=60
POW_CAPTCHA_ENABLED=false
POW_DIFFICULTY=4
VERIFICATION_REQUIRED=false

# ============================================
# VPS Optimization (1GB RAM)
# ============================================
MYSQL_BUFFER_POOL_SIZE=128M
MYSQL_MAX_CONNECTIONS=50
PHP_FPM_MAX_CHILDREN=5
PHP_FPM_START_SERVERS=2
NGINX_WORKER_CONNECTIONS=512
ENABLE_SWAP=true
USE_EXTERNAL_SERVICES=true
CACHE_TTL=3600
ENABLE_GZIP=true
